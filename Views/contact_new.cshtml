@{
  Layout = "Views/Shared/_Layout.cshtml";
}

<h1>Create a new contact:</h1>

<form class="form-group" action="/contact_created" method="post">

  <label for="contact-name">Full Name:</label>
  <input class="form-control field" id="contact-name" type="text" name="contact-name" required>

  <label for="contact-number">Phone Number:</label>
  <input class="form-control field" id="contact-number" type="text" name="contact-number">

  <label for="contact-address1">Address (Line 1):</label>
  <input class="form-control field" id="contact-address1" type="text" name="contact-address1">

  <label for="contact-address2">Address (Line 2):</label>
  <input class="form-control field" id="contact-address2" type="text" name="contact-address2">

  <label for="contact-city">City:</label>
  <input class="form-control field" id="contact-city" type="text" name="contact-city">

  <label for="contact-state">State:</label>
  <input class="form-control field" id="contact-state" type="text" name="contact-state">

  <label for="contact-zip">Zip Code:</label>
  <input class="form-control field" id="contact-zip" type="text" name="contact-zip">

  <button class="btn btn-app" type="submit">Create Contact</button>
</form>
